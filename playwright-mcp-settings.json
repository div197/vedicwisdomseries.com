{
  "browserOptions": {
    "headless": true,
    "browser": "chrome",
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
    "ignoreHTTPSErrors": true,
    "locale": "en-US",
    "timezoneId": "America/New_York"
  },
  "outputOptions": {
    "outputDir": "./playwright-output",
    "saveTrace": true,
    "screenshot": {
      "type": "png",
      "fullPage": true
    }
  },
  "capabilities": [
    "vision",
    "pdf"
  ],
  "security": {
    "blockServiceWorkers": false,
    "allowedOrigins": [
      "https://vedicwisdomseries.com",
      "http://localhost:5173",
      "http://localhost:4173"
    ]
  }
}